@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card-columns card-group">
@foreach (var product in Model.Products)
{
    <div class="card">
        <div class="card-img card-img-top" style="background-image: url('@product.Image');">
        </div>
        <div class="card-body">
            <h5 class="card-title">@product.Title</h5>
        </div>
    </div>
}
</div>